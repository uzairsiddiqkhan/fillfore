<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/verify_screen_2"
    tools:context=".verificationActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"

            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:text="Sending a Verification code to " />

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/verifiableCCP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"

            android:layout_gravity="center_horizontal"
            android:text="+92" />

            <TextView
                android:id="@+id/verifiableNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:text="-3142020306" />

            <TextView
                android:id="@+id/editVerifiable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"

                android:textColor="@color/support_main"
                android:layout_gravity="center_horizontal"
                android:text=" Edit Number?" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.97" />

            <EditText
                android:id="@+id/dig1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:layout_weight="1"
                android:maxLength="1"
                android:imeOptions="actionNext"
                android:background="@drawable/number_rings"
                android:layout_marginEnd="5dp"
                android:importantForAutofill="no"
                tools:ignore="LabelFor"
                android:ems="10"
                android:textSize="18sp"
                android:textStyle="bold"
                android:inputType="number" />
            <EditText
                android:id="@+id/dig2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/number_rings"
                android:importantForAutofill="no"
                android:layout_weight="1"
                android:maxLength="1"
                android:imeOptions="actionNext"
                android:layout_marginEnd="5dp"
                android:ems="10"
                android:textSize="18sp"
                android:textStyle="bold"
                android:inputType="number" />
            <EditText
                android:id="@+id/dig3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/number_rings"
                android:importantForAutofill="no"
                android:layout_weight="1"
                android:maxLength="1"
                android:imeOptions="actionNext"
                android:layout_marginEnd="5dp"
                android:ems="10"
                android:textSize="18sp"
                android:textStyle="bold"
                android:inputType="number" />
            <EditText
                android:id="@+id/dig4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/number_rings"
                android:importantForAutofill="no"
                android:layout_weight="1"
                android:maxLength="1"
                android:imeOptions="actionNext"
                android:layout_marginEnd="5dp"
                android:ems="10"
                android:textSize="18sp"
                android:textStyle="bold"
                android:inputType="number" />
            <EditText
                android:id="@+id/dig5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/number_rings"
                android:importantForAutofill="no"
                android:layout_weight="1"
                android:maxLength="1"
                android:imeOptions="actionNext"
                android:layout_marginEnd="5dp"

                android:ems="10"
                android:textSize="18sp"
                android:textStyle="bold"
                android:inputType="number" />
            <EditText
                android:id="@+id/dig6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:background="@drawable/number_rings"
                android:importantForAutofill="no"
                android:layout_weight="1"
                android:maxLength="1"
                android:imeOptions="actionDone"
                android:ems="10"
                android:textSize="18sp"
                android:textStyle="bold"
                android:inputType="number" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.97" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"

                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:text="OTP not Recieved?" />

            <TextView
                android:id="@+id/resendbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/support_main"
                android:layout_gravity="center_horizontal"
                android:text=" Resend In 00:00" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_gravity="top"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <Button
                android:id="@+id/btnSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:textSize="16sp"

                android:text="Sign up"
                android:textAllCaps="false"
                android:background="@drawable/button_solid"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>




    </LinearLayout>


</LinearLayout>